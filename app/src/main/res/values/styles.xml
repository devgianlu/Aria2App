<resources>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.FullBlackNight" parent="AppTheme" />

    <!-- Force white -->
    <style name="ForceWhite">
        <item name="android:tint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- Edit profile TextInputField -->
    <style name="DarkTextInputLayout.OutlinedBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_field_stroke_on_dark</item>
        <item name="endIconTint">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Edit profile CheckBox -->
    <style name="DarkCheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox" />

    <!-- App theme variants -->
    <style name="AppTheme.NoActionBar.Uri" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.NoActionBar.Torrent" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorTorrent</item>
        <item name="colorPrimaryVariant">@color/colorTorrentVariant</item>
        <item name="colorSecondary">@color/colorTorrent</item>
        <item name="colorSecondaryVariant">@color/colorTorrentVariant</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="android:statusBarColor">@color/colorTorrentVariant</item>
    </style>

    <style name="AppTheme.NoActionBar.Metalink" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorMetalink</item>
        <item name="colorPrimaryVariant">@color/colorMetalinkVariant</item>
        <item name="colorSecondary">@color/colorMetalink</item>
        <item name="colorSecondaryVariant">@color/colorMetalinkVariant</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="android:statusBarColor">@color/colorMetalinkVariant</item>
    </style>

    <style name="AppTheme.Batch" parent="AppTheme">
        <item name="colorPrimary">@color/colorBatch</item>
        <item name="colorPrimaryVariant">@color/colorBatchVariant</item>
        <item name="colorSecondary">@color/colorBatch</item>
        <item name="colorSecondaryVariant">@color/colorBatchVariant</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar.WebView" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorWebView</item>
        <item name="colorPrimaryVariant">@color/colorWebViewPressed</item>
        <item name="colorSecondary">@color/colorWebView</item>
        <item name="colorSecondaryVariant">@color/colorWebViewPressed</item>
        <item name="colorOnPrimary">#fff</item>
        <item name="colorOnSecondary">#fff</item>
        <item name="android:statusBarColor">@color/colorWebViewPressed</item>
    </style>

    <!-- Fab label style -->
    <style name="FabLabel">
        <item name="android:background">@drawable/fab_label_layout</item>
        <item name="android:textColor">?colorSurface</item>
    </style>

    <!-- Big layout tabbing -->
    <style name="BigTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabMode">scrollable</item>
    </style>

    <!-- Custom style for FileTypeTextView -->
    <declare-styleable name="FileTypeTextView">
        <attr name="textColor" format="color" />
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
</resources>
