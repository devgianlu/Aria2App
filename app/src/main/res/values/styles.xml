<resources>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppTheme.FullBlackNight" parent="AppTheme" />

    <!-- Force white -->
    <style name="ForceWhite">
        <item name="android:tint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item><!-- FIXME -->
    </style>

    <!-- Dense outlined input text on dark -->
    <style name="TextInputLayout.OutlinedBox.OnDark.Dense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_field_stroke_on_dark</item>
        <item name="endIconTint">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- App theme variants -->
    <style name="AppTheme.NoActionBar.URI" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.NoActionBar.Torrent" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorTorrent_pressed</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Metalink" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorMetalink_pressed</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.Batch" parent="AppTheme">
        <item name="colorAccent">@color/colorBatch_pressed</item>
    </style>

    <!-- Fab label style -->
    <style name="FabLabel">
        <item name="android:background">@drawable/fab_label_layout</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Big layout tabbing -->
    <style name="BigTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabMode">scrollable</item>
    </style>

    <!-- Custom style for FileTypeTextView -->
    <declare-styleable name="FileTypeTextView">
        <attr name="textColor" format="color" />
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
</resources>
