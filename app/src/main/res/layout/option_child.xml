<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingEnd="35dp"
    android:paddingStart="35dp">

    <TextView
        android:id="@+id/moreAboutDownload_option_valueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/moreAboutDownload_option_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/moreAboutDownload_option_valueText"
        android:inputType="text"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/moreAboutDownload_option_optionDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/moreAboutDownload_option_editText"
        android:layout_marginTop="10dp"
        android:maxLines="10"
        android:textAlignment="center" />
</RelativeLayout>
